<table class="table table-hover">
<thead>
  <th> ID </th>
  <th> Van </th>
  <th>UO ID</th>
  <th> Rider Name </th>
  <th>Origin Address</th>
  <th>Destination Address</th>
  <th>Passengers</th>
  <th>Phone Number</th>

  <th></th>
</thead>
<% @rides.each do |ride| %>
  <tr align="center">
    <td><%= link_to ride.id, ride_path(ride)%></td>
    <td><select>
      <option value="1">1</option>
      <option value="2">2</option>
      <option value="3">3</option>
      <option value="4">4</option>
      <option value="5">5</option>
    </select></td>
    <td><%= ride.sid%></td>
    <td><%= ride.name%></td>
    <td><%= ride.origin%></td>
    <td><%= ride.destination%></td>
    <td><%= ride.passengers%></td>
    <td><%= ride.phone%></td>
    <td><%= link_to "Edit", edit_ride_path(ride), class:"btn btn-default btn-xs" %>
    <%= link_to "Delete", ride_path(ride), class:"btn btn-danger btn-xs", method: :delete, data: { confirm: "Are you sure you want to delete this ride?" } %></td>

  </tr>
<% end %>
</table>
